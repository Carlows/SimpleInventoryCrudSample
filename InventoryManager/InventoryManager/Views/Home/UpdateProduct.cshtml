@model InventoryManager.Models.ViewModels.ProductViewModel

@{
    ViewBag.Title = "UpdateProduct";
}

<h2>UpdateProduct</h2>

<div class="panel panel-danger"> 
    <div class="panel-heading">
        <h5>Actualizar datos</h5>
    </div>
    <div class="panel-body">
    @using (Html.BeginForm("UpdateProduct", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="container">
             @Html.ValidationSummary(true)
        </div>
        
        <input id="ID" type="hidden" name="ProductID" value="@Model.ProductID" />
        <div class="form-group">
            <label class="control-label col-md-4">Nombre</label>
            <input id="fname" type="text" class="form-control col-md-12" name="Name" value="@Model.Name"/>
        </div>
        <div class="form-group">
            <label class="control-label col-md-4">Tipo</label>
            <input id="ftype" type="text" class="form-control col-md-12" name="Type" value="@Model.Type" />
        </div>
        <div class="form-group">
            <label class="control-label col-md-4">Precio</label>
            <input id="fprice" type="text" class="form-control col-md-12" name="Price" value="@Model.Price" />
        </div>
        <div class="form-group">
            <label class="control-label col-md-4">Cantidad en stock</label>
            <input id="fstock" type="text" class="form-control col-md-12" name="InStock" value="@Model.InStock" />
        </div>
        <div class="form-group">
            <input type="submit" value="Actualizar" class="btn btn-danger btn-block col-md-offset-4" />
        </div>
    }
    </div>
</div>
